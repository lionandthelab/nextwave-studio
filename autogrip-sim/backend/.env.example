# LLM API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=4096

# Isaac Sim Configuration
ISAAC_SIM_PATH=/isaac-sim
ISAAC_SIM_HEADLESS=true
ISAAC_SIM_DOCKER_IMAGE=nvcr.io/nvidia/isaac-sim:4.2.0

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=8000
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=100
MAX_LOOP_ITERATIONS=20
SUCCESS_THRESHOLD=3

# Vector Store
CHROMA_PERSIST_DIR=./chroma_db

# Logging
LOG_LEVEL=INFO
